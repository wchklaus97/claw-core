{
  "$schema": "https://opencode.ai/config.json",
  "model": "kilo/x-ai/grok-code-fast-1:optimized:free",
  "small_model": "kilo/z-ai/glm-5:free",
  "enabled_providers": ["kilo"],
  "permission": {
    "*": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "bash": {
      "*": "ask",
      "git *": "allow",
      "cargo *": "allow",
      "dx *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "rg *": "allow",
      "wasm-pack *": "allow",
      "mdbook *": "allow",
      "npm *": "allow",
      "rm *": "deny",
      "sudo *": "deny"
    },
    "edit": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow"
  },
  "agent": {},
  "instructions": ["AGENTS.md"]
}
